<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/viewOrder.css">
</head>
<body>
    <div class="nav">
        <div class="heading">
            <p>Welcome To Admin Panel</p>
        </div>
        {{>n}}
    </div>

        <h1 class="heading">
            View Orders
        </h1>

    <div class="main">
        <div id="user">
            <fieldset class="user">
                <legend>User Details</legend>
                <div class="sec1">
                    <p>ORDER ID: <span class="det">{{data._id}}</span></p>
                    <p>USER ID: <span class="det">{{data.userDetails.id}}</span></p>
                    <p>USER NAME<span class="det">{{data.userDetails.name}}</span></p>
                    <p>USER EMAIL: <span class="det">{{data.userDetails.email}}</span></p>
                    <p>USER PHONE NO:<span class="det">{{data.userDetails.phone}}</span></p>
                    <p>USER WHATSAPP NO: <span class="det">{{data.userDetails.whatsapp}}</span></p>
                    <p>USER ADDRESS: <span class="det">{{data.userDetails.address}}</span></p>
                    <p>PAYMENT METHOD: <span class="det">{{data.paymentMethod}}</span></p>
                </div>
                <div class="sec2">
                    <p>USER''S MESSAGE {{data.message}}</p>
                    {{data}}
                </div>
            </fieldset>

        </div>
        
            <div id="orders">
                <fieldset class="orders">
                    <legend>Order Details</legend> 
                    <a href="https://tmwords.netlify.app/view/{{this.id}}" target="blank" style="color: black; text-decoration: none;">
                        <div class="order">
                            <div class="img">
                                <img src="{{data.img}}" alt="image">
                                <p>{{data.title}}</p>
                            </div>
                            <div class="details">
                                <div class="sub_det">
                                <p>COLORS: <span class="detail">{{data.colors}}</span></p>
                                <p>SIZE: <span class="detail">{{data.sizes}}</span></p>
                                </div>
                                <div class="sub_det">
                                <p>PRICE: <span class="detail">{{data.price}}</span></p>
                                <p>QUANTITY: <span class="detail">{{data.quantity}}</span></p>
                                </div>
                            </div>
                            <div class="total">
                                    <p>TOTAL: <span class="detail">{{#total this.price  this.quantity}}{{/total}}</span></p>
                                </div>
                        </div>
                    </a>
                </fieldset>
            </div>

            <div class="btn_div">
                <form action="/procress/unregister/{{data._id}}"  method="post">
                    <button type="submit" class="submit_btn" >DELIVER</button>
                </form>
            </div>
        </div>
    </div>
        <a href="http://localhost:3000/view/{{this.id}}">
            <img src="{{data.img}}" alt="image">
            <p>{{data.title}}</p>
        </a>
        <p>PRICE: {{data.price}}</p>
        <p>QUANTITY: {{data.quantity}}</p>
        <p>COLORS: {{data.colors}}</p>
        <p>SIZE: {{data.size}}</p>

        <form action="/procress/unregister/{{data._id}}" method="post">
            <button type="submit">DELIVER</button>
        </form>
</body>
</html>